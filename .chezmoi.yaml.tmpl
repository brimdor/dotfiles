{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

data:
    osid: {{ $osid | quote }}

hooks:
  read-source-state:
    pre:
      command: |
        {{ .chezmoi.sourceDir }}/.install-unzip.sh
        {{ .chezmoi.sourceDir }}/.install-password-manager.sh