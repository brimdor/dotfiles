{{- /*
     First data row whose 5th column is non-empty is the newest LTS.
     Remove the leading 'v' from the version string for correct URL construction.
*/ -}}
{{- $cmd := "curl -s -o - https://nodejs.org/dist/index.tab | awk 'NR>1 && $5!=\"\" {gsub(/^v/,\"\",$1); print $1; exit}'" -}}
{{- (output "sh" "-c" $cmd) | trim -}}
