#!/usr/bin/env bash
# Runs as the *target user*; will escalate when needed
set -euo pipefail

ZSH_PATH="$(command -v zsh)"

# Bail if zsh isn’t installed (e.g., playbook failed)
if [[ -z "${ZSH_PATH}" ]]; then
  echo "[chezmoi] zsh not found; skipping shell switch."
  exit 0
fi

CURRENT_SHELL="$(getent passwd "$USER" | cut -d: -f7)"
if [[ "${CURRENT_SHELL}" == "${ZSH_PATH}" ]]; then
  echo "[chezmoi] $USER already uses zsh."
  exit 0
fi

# chsh needs root; add to /etc/shells if missing
if ! grep -qx "${ZSH_PATH}" /etc/shells; then
  echo "[chezmoi] Adding ${ZSH_PATH} to /etc/shells"
  echo "${ZSH_PATH}" | sudo tee -a /etc/shells >/dev/null
fi

echo "[chezmoi] Switching $USER to zsh → ${ZSH_PATH}"
sudo chsh -s "${ZSH_PATH}" "${USER}"
